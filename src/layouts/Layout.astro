---
import { getLangFromUrl, useTranslations } from '../i18n/languagePicker'
const lang = getLangFromUrl(Astro.url)
const t = useTranslations(lang)

import Navbar from '../components/Navbar/index.astro'

import '../styles/global.css'
---

<html lang={lang} class="scroll-smooth">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.png" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{t('page.title')}</title>
		<meta name="description" content={t('page.description')} />
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=Caprasimo&family=Luckiest+Guy&family=Salsa&display=swap"
			rel="stylesheet"
		/>
		<script is:inline src="https://code.jquery.com/jquery-3.7.0.min.js"
		></script>
	</head>
	<body class="bg-background overflow-x-hidden text-white">
		<Navbar />
		<slot />
	</body>
</html>
